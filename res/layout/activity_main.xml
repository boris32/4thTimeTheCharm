<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thtimethecharm.MainActivity" 
    android:weightSum="100">
    
    <LinearLayout 
        android:id="@+id/TopNContentLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:weightSum="100" >        
        
        <LinearLayout
            android:id = "@+id/HeaderLayout"
            android:orientation="vertical"
        	android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="90" >

            <TextView
                android:id="@+id/tw_Header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:gravity="center"
                android:text="HEADER" />
            
        </LinearLayout>
        
        
        
        
        
        <FrameLayout
            android:id="@+id/ContentLayout" 
            android:orientation="vertical"
        	android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="10" >    
            
            <fragment android:name="com.example.thtimethecharm.BlankFragment"
            android:id="@+id/content_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
             />
            
        </FrameLayout>
        
        
        
        
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/NavigationLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="90"
        android:background="@android:color/black" >

        <LinearLayout 
            android:id="@+id/BackButtonContainer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="80" >

            <Button
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_back_button"
                android:gravity="center" />

        </LinearLayout>
        
        
        <LinearLayout 
            android:id="@+id/BetweenButtonsOptionContainer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="20" >

        </LinearLayout>
        
		<LinearLayout  
            android:id="@+id/FwdButtonContainer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="80" >
        <Button
            android:id="@+id/button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/custom_button1" />
        </LinearLayout>
        
    </LinearLayout>
    
    
    
    

</LinearLayout>